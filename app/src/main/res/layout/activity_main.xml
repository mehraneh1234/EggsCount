<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/mainViewGroup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/rowOne">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter egg's count:"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:id="@+id/tvEdit" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/rowTwo">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:id="@+id/editText"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:text="Enter"
            android:textSize="18sp"
            android:id="@+id/btnEnter" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/rowThree">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gross: "
            android:textSize="18sp"
            android:id="@+id/tvGross" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/rowFour">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dozen: "
            android:textSize="18sp"
            android:id="@+id/tvDozen" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/rowFive">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unit: "
            android:textSize="18sp"
            android:id="@+id/tvUnit" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/rowSix">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#EA4335"
            android:id="@+id/tvAlarm" />
    </LinearLayout>
</LinearLayout>